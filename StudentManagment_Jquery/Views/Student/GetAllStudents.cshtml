@model IEnumerable<student>

<a class="btn btn-primary" href="@Url.Action("AddStudent", new{})">Register New Student</a>
<br />
<br />

<table class="table table-striped table-bordered" id="studentTable">
	<thead>
		<tr>
			<th>Student ID</th>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Date of Birth</th>
			<th>Email</th>
			<th>Phone</th>
			<th></th>
		</tr>
	</thead>

	<tbody>
		@foreach (var item in Model)
		{
			@Html.HiddenFor(model => item.student_id)
			<tr>
				<td> @Html.DisplayFor(modelItem => item.student_id)</td>
				<td> @Html.DisplayFor(modelItem => item.FirstName)</td>
				<td> @Html.DisplayFor(modelItem => item.LastName)</td>
				<td> @Html.DisplayFor(modelItem => item.dob)</td>
				<td> @Html.DisplayFor(modelItem => item.Email)</td>
				<td> @Html.DisplayFor(modelItem => item.Phone)</td>
				<td>
					<a class="btn btn-warning" href="@Url.Action("UpdateStudent", new { id = item.student_id })">Update</a>
					<a class="btn btn-danger"
					   href="@Url.Action("DeleteStudent", new { id = item.student_id })"
					   onclick="return confirm('Are you sure you want to delete this record?');">Delete</a>
				</td>
			</tr>
		}
	</tbody>

</table>

<script type="text/javascript">
	var js = jQuery.noConflict(true);
	js(document).ready(function () {
		js('#studentTable').DataTable({
			"paging": true
		});
	});
</script>